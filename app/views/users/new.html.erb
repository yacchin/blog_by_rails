<div id="nav" class="text-center">

	<h1 style="margin-top: 30px;margin-bottom:40px">Sign Up</h1>

	<%= form_tag "/users" do %>
	  <!-- name -->
	  <div class="control-group">
	  	<%= label :user, :name, :style => "margin-left:-180px" %>
	  	<div class="controls">
	  		<%= text_field :user, :name, :class => 'text_field' %>
	  	</div>
	  </div>

	  <!-- password -->
	  <div class="control-group">
	  	<%= label :user, :password, :style => "margin-left:-155px" %>
	  	<div class="controls">
	  		<%= password_field :user, :password, :class => 'text_field' %>
	  	</div>
	  </div>

	  <!-- password confirm -->
	  <div class="control-group">
	  	<%= label :user, :password_confirm, :style => "margin-left:-98px" %>
	  	<div class="controls">
	  		<%= password_field_tag "password_confirm"%>
	  	</div>
	  </div>

      <%= form_tag({:action => 'create'},{:method => "post"}) do  %>
        <%= submit_tag 'Sign Up', :class => 'btn btn-primary', :style => "margin-top:20px" %>
      <% end %>

	<% end %>

</div>